<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl">


    <android.support.v7.widget.CardView
        android:id="@+id/league_row_team_ROW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">


        <RelativeLayout
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/league_row_team_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="1"
                android:layout_marginLeft="20dp"
                android:textSize="21sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/league_row_team_logo"
                app:civ_border_width="0dp"
                android:src="@drawable/esteghlal_tehran"
                android:layout_width="64dp"
                android:layout_toLeftOf="@id/league_row_team_rank"
                android:layout_height="64dp"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/league_row_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/league_row_team_logo"
                android:layout_marginRight="30dp"
                android:text="پرسپولیس"
                android:textSize="21sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>